<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>    
    <constant name="struts.devMode" value="true" />
    <constant name="struts.configuration.xml.reload" value="true" />
    
    <package name="egresados" extends="struts-default">
        <action name="*Ingreso" method="{1}" class="Controlador.IngresoAction">
            <result name="success">/index.jsp</result>
            <result name="error">/entrada.jsp</result>
        </action>
        
        <action name="*Registro" method="{1}" class="Controlador.RegistroAction">
            <result name="nuevo">/registroNuevoUsuario.jsp</result>
            <result name="actual">/registroSistema.jsp</result>
            
            <result name="successNuevo">/informacionPersonal.jsp</result>
            <result name="successActual">/datosUbicacionTabla.jsp</result>
            
            <result name="errorNuevo">/registroNuevoUsuario.jsp</result>
            <result name="errorActual">/registroSistema.jsp</result>
        </action>
        
        <action name="*Ubicacion" method="{1}" class="Controlador.UbicacionAction">
            <result name="success">/datosUbicacionTabla.jsp</result>
        </action>
    </package>
</struts>